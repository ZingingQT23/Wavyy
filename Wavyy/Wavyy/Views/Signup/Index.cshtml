@model Wavyy.ViewModels.NewUserViewModel
<h3>Sign Up!</h3>
<div class="container">
    <div class="row">
        <form asp-controller="Signup" asp-action="Index" method="post">
            <div class="form-group row">
                <label asp-for="Username" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-6">
                    <input asp-for="Username" type="text" class="form-control" />
                </div>
                <span asp-validation-for="Username"></span>
            </div>
            
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-6">
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
                <span asp-validation-for="Email"></span>
            </div>
            
            <div class="form-group row">
                <label asp-for="VEmail" class="col-sm-2 col-form-label">Verify Email</label>
                <div class="col-sm-6">
                    <input asp-for="VEmail" type="email" class="form-control" />
                </div>
                <span asp-validation-for="VEmail"></span>
            </div>
            
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-6">
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            
            <div class="form-group row">
                <label asp-for="VPassword" class="col-sm-2 col-form-label">Verify Password</label>
                <div class="col-sm-6">
                    <input asp-for="VPassword" type="password" class="form-control" />
                </div>
                <span asp-validation-for="VPassword"></span>
            </div>
            
            <input type="submit" class="btn btn-primary" value="Sign Up!" />
        </form>
    </div>
</div>